        "    '''\n",
        "\n",
        "    try: #il blocco try/except gestisce l'apertura del file con gli eventuali errori derivanti\n",
        "        with open(file_name, newline='') as file_csv:\n",
        "           file_csv.seek(0)  #seek(0) serve per riportare il cursore che permette la lettura del file in cima a quest'ultimo, leggendolo dall'inizio.\n",
        "           file_reader=csv.reader(file_csv)\n",
        "           next(file_reader)   #trascura la riga con nomi delle colonne\n",
        "           rows=list(file_reader) #ottengo la lista di righe del file\n",
        "           return rows\n",
        "\n",
        "    except FileNotFoundError:\n",
        "\n",
        "        if file_name==\"magazzino.csv\" and function_call==\"add\":\n",
        "\n",
        "             #se l'errore deriva dalla tentata apertura del file \"magazzino.csv\" dal metodo \"add_in_market\",\n",
        "             #vuol dire che il magazzino è ancora vuoto e quindi che l'utente sta cercando di inserire la prima merce.\n",
        "             #Per questo il file viene creato e viene inserito l'header.\n",
        "\n",
        "             print(\"Il file magazzino non è presente. Verrà creato.\")\n",
        "             with open(\"magazzino.csv\", \"w+\", newline='') as file_csv:\n",
        "                 file_writer=csv.writer(file_csv)\n",
        "                 file_writer.writerow(self.header)\n",
        "             rows=[]    # ritorna la lista di rows corrispondente al file vuoto (serve nelle varie altre funzioni)\n",
        "             return rows\n",
        "\n",
        "        elif file_name==\"magazzino.csv\" and function_call==\"sell\":\n",
